<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/details_activity"
    tools:context=".view.ProductDetailsActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:padding="16dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/product_details_imageView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/product_details_imageView"
        android:id="@+id/product_details_titleView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/product_details_titleView"
        android:id="@+id/product_details_priceView"/>

    <Button
        android:id="@+id/cart_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:layout_centerHorizontal="true"
        android:text="@string/add_to_cart"
        app:icon="@drawable/ic_baseline_add_shopping_cart_24"
        app:iconSize="30dp"
        app:iconPadding="60dp"
        android:padding="16dp"
        style="@style/Widget.MaterialComponents.Button.Icon"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_layout">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.fragment.app.FragmentContainerView>

</LinearLayout>
</RelativeLayout>